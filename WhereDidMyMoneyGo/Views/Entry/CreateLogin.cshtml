@*
    Page for creating a user login
*@
@model UsersModel

<div class="text-center" style="padding-top: 95px; padding-bottom: 105px;">

    <div style="width: 490px; margin: 0 auto">
        <table cellpadding="10" cellspacing="0">
            <tr>
                <td style="font-size:larger;">Create Login</td>
            </tr>
        </table>
    </div>

    <div style="border-style: solid; width: 490px; margin: 0 auto">

        @using (Html.BeginForm("FormCreateLogin", "Entry", FormMethod.Get))
        {
            <table style="border-collapse: separate; padding-top: 12px;" cellpadding="15" cellspacing="0">
                <tr>
                    <th>Username</th>
                    <td>@Html.TextBoxFor(m => m.UserName, new { style = "width:330px;" })</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>@Html.TextBoxFor(m => m.Password, new { style = "width:330px;" })</td>
                </tr>
                <tr>
                    <th>Beginning Balance</th>
                    <td>@Html.TextBoxFor(m => m.Balance, new { style = "width:330px;" })</td>
                </tr>
                <tr>
                    <th>First Name</th>
                    <td>@Html.TextBoxFor(m => m.FirstName, new { style = "width:330px;" })</td>
                </tr>
                <tr>
                    <th>Last Name</th>
                    <td>@Html.TextBoxFor(m => m.LastName, new { style = "width:330px;" })</td>
                </tr>
                <tr>
                    <th>Security Question</th>
                    <td align="left" style="font-size:small;">Most memorable or favorite childhood destination. (place, vacation, field trip, etc.)</td>
                </tr>
                <tr>
                    <th>Security Answer</th>
                    <td>@Html.TextBoxFor(m => m.SecurityAnswer, new { style = "width:330px;" })</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td style="padding-left: 280px;"><input type="submit" value="Submit" /></td>
                </tr>
            </table>
        }

        <table style="border-collapse: separate; border-spacing: 24px;" cellpadding="0" cellspacing="0">
            <tr>
                <td align="left" style="font-size: x-small; background-color: yellow; font-weight: bold;">*Password must be at least 10 characters long, contain 1 capital letter, and 1 number.</td>
            </tr>
            <tr>
                <td align="left" style="font-size: x-small; background-color: yellow; font-weight: bold;">*Beginning Balance must be a number, larger than zero, and non-negative.</td>
            </tr>
        </table>

        <table style="border-collapse: separate; border-spacing: 12px;" cellpadding="15" cellspacing="0">
            <tr>
                <td>@Html.TextBoxFor(m => m.Message, new { @readonly = "readonly", style = "color:red; border:none; width:300px; font-weight:bold;" })</td>
            </tr>
        </table>

        <table style="border-collapse: separate; border-spacing: 12px;" cellpadding="10" cellspacing="0">
            <tr>
                @using (Html.BeginForm("EntryIndex", "Entry", FormMethod.Get))
                {
                    <td><input type="submit" value="Back to Login" /></td>
                }
            </tr>
        </table>


    </div>
</div>
